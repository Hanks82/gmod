@persist T:entity
runOnTick(1)
LOS = (T:boxCenterW() - T:vel() * 0.05  - owner():shootPos()):toAngle()
A = owner():keyAttack1()
if(A && inrange(angnorm(LOS - owner():eyeAngles()), ang(-6), ang(6))) {
    owner():plySetAng(LOS)   
} 

if(owner():aimEntity():isPlayer()) {
    owner():plyDoAttack1(1)
    T = owner():aimEntity()   
} else {
    owner():plyDoAttack1(0)   
}


